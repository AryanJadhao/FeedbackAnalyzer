      </div>
    </div>
  </div>

  <script>
    const data = {
      labels: ['Positive', 'Neutral', 'Negative'],
      datasets: [{
        data: [<%= stats.positive %>, <%= stats.neutral %>, <%= stats.negative %>],
        backgroundColor: ['#198754', '#ffc107', '#dc3545']
      }]
    };

    const config = {
      type: 'pie',
      data: data,
      options: {
        plugins: {
          legend: {
            labels: {
              color: '#ffffff'
            }
          }
        }
      }
    };

    new Chart(document.getElementById('sentimentChart'), config);
  </script>
</body>
</html>
